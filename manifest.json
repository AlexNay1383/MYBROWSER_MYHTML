{
    "manifest_version": 2,
    "name": "MY HTML",
    "version": "0.1",
  
    "description": "Attempts to make the best experience for the user by legally removing all overlays, blurs, noscroll locks and more!",
  
    "icons": {
        "48": "icons/48.png",
        "96": "icons/96.png"
    },

    "permissions": ["activeTab", "tabs"],

    "browser_action": {
        "default_icon": "icons/ext_icon.png",
        "default_title": "MY HTML",
        "default_popup": "popup/choose.html"
    },

    "web_accessible_resources": [
        "content_scripts/*"
    ]
  }
  